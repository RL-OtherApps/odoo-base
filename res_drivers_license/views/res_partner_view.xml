<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <record id="view_partner_form_drivers_license" model="ir.ui.view">
            <field name="name">res.partner.form.inherit.drivers_license</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form" />
            <field name="arch" type="xml">
                <xpath expr="//page[@name='sales_purchases']" position="after" attrs="{'invisible':[('customer', '=', False)]}">
                    <page string="Drivers License">
                        <group>
                            <group>
                                <field name="has_drivers_license"/>
                                <field name="drivers_license_id" options="{'no_create_edit': True}"/> 
                                <field name="has_car"/>
                            </group>
                        </group>
                    </page>
                </xpath> 
            </field>
        </record>
    </data>
</odoo>