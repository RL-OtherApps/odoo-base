<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <record id="view_partner_form_sni" model="ir.ui.view">
            <field name="name">res.partner.form.inherit.sni</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form" />
            <field name="arch" type="xml">

                 <page name="internal_notes" position="before">
                    <page string="SNI">
                    <group>
                        <field name="sni_ids" mode="tree" nolabel="1">
                            <tree editable="bottom" string="SNI codes">
                            <field name="name" />    
                            <field name="code" />
                            <field name="description"/>
                                        <!-- <field name="parent_id" />  -->

                           
                        </tree>
                      </field>
                    </group>
                    </page>
                </page>  
                <field name="barcode" position="after">
                     <field name="sni_ids" widget="many2many_tags"/> 
                </field>
            </field>
        </record>
        
    </data>
</odoo>
