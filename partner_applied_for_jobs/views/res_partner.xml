<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
  <record id="view_partner_form_applied_for_jobs" model="ir.ui.view">
        <field name="name">res.partner.applied_for_jobs</field>
        <field name="model">res.partner</field> 
        <field name="inherit_id" ref="base.view_partner_form" />
        <field name="arch" type="xml"> 
            <xpath expr="//page[@name='internal_notes']" position="after" attrs="{'invisible':[('is_jobseeker', '=', False)]}">
                <page string="Activity">
                    <group>
                      <field name="jobs_ids" mode="tree" nolabel="1">
                        <tree editable="bottom" string="Jobs" default_order="job_id">
                           <field name="job_id" />    
                            <field name="description"/>
                            <field name="skills" widget="many2many_tags"/>  
                            <!-- <field name="ssyk_ids" widget="many2many_tags"/> -->
                        </tree>
                      </field>
                    
                    </group>
                </page>
            </xpath>

        </field>
    </record>
</odoo>